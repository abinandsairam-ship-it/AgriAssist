/**
 * @fileOverview
 * This ruleset enforces a strict user-ownership model for all data stored in Firestore.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, ensuring that each user's data is isolated and
 * accessible only by them. Crop images are stored as subcollections under each user, and
 * predictions are stored as subcollections under crop images.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing other users is disallowed.
 * - All write operations require a verified, authenticated user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profiles. Users can read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their profile with matching userId.
     *   - request.auth.uid: "user123"
     *   - request.resource.data.id: "user123"
     * @allow (get, update, delete) - Authenticated user reads, updates, or deletes their own profile.
     *   - request.auth.uid: "user123"
     *   - resource.data.id: "user123"
     * @deny (create) - Authenticated user attempts to create a profile with a mismatched userId.
     *   - request.auth.uid: "user123"
     *   - request.resource.data.id: "user456"
     * @deny (get, update, delete) - Authenticated user attempts to read, update, or delete another user's profile.
     *   - request.auth.uid: "user123"
     *   - resource.data.id: "user456"
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for crop images. Users can create, read, update, and delete their own crop images.
     * @path /users/{userId}/cropImages/{cropImageId}
     * @allow (create) - Authenticated user creates a crop image under their profile.
     *   - request.auth.uid: "user123"
     *   - path: /users/user123/cropImages/image456
     * @allow (get, update, delete) - Authenticated user reads, updates, or deletes their own crop image.
     *   - request.auth.uid: "user123"
     *   - path: /users/user123/cropImages/image456
     * @deny (create) - Authenticated user attempts to create a crop image under another user's profile.
     *   - request.auth.uid: "user123"
     *   - path: /users/user456/cropImages/image789
     * @deny (get, update, delete) - Authenticated user attempts to read, update, or delete another user's crop image.
     *   - request.auth.uid: "user123"
     *   - path: /users/user456/cropImages/image789
     * @principle Enforces document ownership for all operations on crop images.
     */
    match /users/{userId}/cropImages/{cropImageId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for AI predictions. Users can create, read, update, and delete their own predictions for crop images.
     * @path /users/{userId}/cropImages/{cropImageId}/predictions/{predictionId}
     * @allow (create) - Authenticated user creates a prediction under their crop image.
     *   - request.auth.uid: "user123"
     *   - path: /users/user123/cropImages/image456/predictions/prediction789
     * @allow (get, update, delete) - Authenticated user reads, updates, or deletes their own prediction.
     *   - request.auth.uid: "user123"
     *   - path: /users/user123/cropImages/image456/predictions/prediction789
     * @deny (create) - Authenticated user attempts to create a prediction under another user's crop image.
     *   - request.auth.uid: "user123"
     *   - path: /users/user456/cropImages/image789/predictions/prediction012
     * @deny (get, update, delete) - Authenticated user attempts to read, update, or delete another user's prediction.
     *   - request.auth.uid: "user123"
     *   - path: /users/user456/cropImages/image789/predictions/prediction012
     * @principle Enforces document ownership for all operations on AI predictions.
     */
    match /users/{userId}/cropImages/{cropImageId}/predictions/{predictionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}